<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context=".MainActivity">

    <!-- EditText for Username -->
    <EditText
        android:id="@+id/idEdtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:hint="Username"
        android:background="#ffffff"
        android:padding="12dp"
        android:importantForAutofill="no"
        android:inputType="textPersonName" />

    <!-- EditText for Password -->
    <EditText
        android:id="@+id/idEdtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEdtUsername"
        android:layout_margin="16dp"
        android:hint="Password"
        android:background="#ffffff"
        android:padding="12dp"
        android:importantForAutofill="no"
        android:inputType="textPassword" />

    <!-- EditText for Email -->
    <EditText
        android:id="@+id/idEdtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEdtPassword"
        android:layout_margin="16dp"
        android:hint="Email"
        android:background="#ffffff"
        android:padding="12dp"
        android:inputType="textEmailAddress" />

    <!-- Button for creating account -->
    <Button
        android:id="@+id/idBtnSendData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEdtEmail"
        android:layout_margin="16dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:background="#009688"
        android:textColor="#ffffff"
        android:elevation="4dp"
        android:padding="12dp" />

    <!-- Button for login -->
    <Button
        android:id="@+id/idBtnTrails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idBtnSendData"
        android:layout_margin="16dp"
        android:text="Already have an account? Login"
        android:textAllCaps="false"
        android:background="#3F51B5"
        android:textColor="#ffffff"
        android:elevation="4dp"
        android:padding="12dp" />

</RelativeLayout>
